/// QUESTÃO 17: ///

public class QUESTAO17 {
	
	public static void main(String[] args) {
	
	double[] numerodec = {900, 500, 400, 100, 90, 50, 40, 10, 9, 5, 4, 1};
String[] nromanos = {"CM", "D", "CD", "C", "XC", "L", "XL", "X", "IX", "V", "IV", "I"};


    Scanner digite = new Scanner (System.in);
System.out.println("Digite um número: ");
double ndecimal = digite.nextDouble();

int x = 0;
if (ndecimal>= numerodec[x]) {
System.out.print(nromanos[x]);
ndecimal -=numerodec[x]; 
}else {
x++; }
}
